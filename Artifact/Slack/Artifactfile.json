{
  "$schema": "https://raw.githubusercontent.com/Azure/azure-devtestlab/master/schemas/2015-01-01/dtlArtifacts.json",
  "title": "Slack",
  "description": "Installs Slack using the Chocolatey package manager",
  "tags": [
    "Windows",
    "Slack"
  ],
  "iconUri": "https://chocolatey.org/content/packageimages/slack.1.0.0.png",
  "targetOsType": "Windows",
   "parameters": {
        "installUsername": {
            "type": "string",
            "displayName": "Install User Name",
            "description": "User with admin rights to install Slack"
        },
        "installPassword": {
            "type": "securestring",
            "displayName": "Install Password",
            "description": "Password for the install"
        }
    },
    "runCommand": {
    "commandToExecute": "[concat('powershell.exe -ExecutionPolicy bypass -File startChocolatey.ps1 -PackageList slack -Username ',  parameters('installUsername'), ' -Password ', parameters('installPassword'))]"
  }
}